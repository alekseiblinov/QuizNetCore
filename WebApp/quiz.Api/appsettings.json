{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=quiz;Integrated Security=true;Min Pool Size=50; Max Pool Size=500; Connection Timeout=300;MultipleActiveResultSets=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // Длительность в секундах в течение которой действует Токен безопасности.  *** При отладке это значение лучше устанавливать равным 300.
  "SecurityTokenLifetimeSeconds": "30",
  // Время в минутах, в течение которого проверяются прошлые IP-адреса, с которых были зарегистрированы Токены безопасности пользователя с таким именем.
  "SecurityTokenIpAddressesCheckDurationMinutes": 15
}
