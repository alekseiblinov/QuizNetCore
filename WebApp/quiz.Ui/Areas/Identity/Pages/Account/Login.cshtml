@page

@model LoginModel

@{
    ViewData["Title"] = "Вход пользователя";
}

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4 class="mt-3">Вход</h4>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mt-1">
                    <input asp-for="Input.Login" class="form-control" autocomplete="userlogin" aria-required="true" />
                    <label asp-for="Input.Login" class="form-label"></label>
                    <span asp-validation-for="Input.Login" class="text-danger"></span>
                </div>

                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mt-1">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-2"><u>Вход</u></button>
                </div>

                <div class="mt-2">
                    <div>
                        <a id="forgot-password" asp-page="./ForgotPassword"><u>Восстановление пароля</u></a>
                    </div>
                    <div>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><u>Регистрация</u></a>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 offset-md-2">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
