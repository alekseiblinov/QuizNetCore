@if (ShowDialog)
{
    <div class="modal fade show d-block border-dark rounded" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @* Заголовок модального окна *@
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">@HeaderText</h5>
                    <button type="button" class="btn-close" @onclick="@OkAsync" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @* Тело модального окна *@
                <div class="modal-body">
                    @MessageText

                    <div class="row">
                        @* Рамка отступов вокруг кнопок управления *@
                        <div class="col d-flex mx-1 mt-2">
                            <button class="btn btn-outline-primary text-center m-1 ms-auto" style="width: 75px" @onclick="@OkAsync">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
