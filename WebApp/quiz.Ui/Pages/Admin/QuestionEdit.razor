@page "/questionedit"
@page "/questionedit/{ReturnUrlEncoded}"
@page "/questionedit/{Id:guid}/{ReturnUrlEncoded}"

@attribute [Authorize(Roles = "Администраторы")]

@using quiz.Ui.Components
@using quiz.ModelBusiness

<LayoutView Layout="@typeof(AdminLayout)">
    <PageTitle>@HeaderText</PageTitle>

    <div class="card border-primary mt-2 mb-3">
        @* Заголовок карточки *@
        <div class="card-header h5">@HeaderText</div>
        @* Тело карточки *@
        <div class="card-body">
            <div class="card-text">
                @* Если данные в контрол ещё не загружены полностью, то *@
                @if (!IsLoaded)
                {
                    @* Отображение пользователю надписи "Загрузка". *@
                    <DxLoadingPanel Visible="true"
                                    Text="Загрузка..."
                                    ApplyBackgroundShading="false"
                                    IndicatorAnimationType="WaitIndicatorAnimationType.Spin">
                    </DxLoadingPanel>
                }
                else
                {
                    @* Если нет данных для отображения, то *@
                    @if (CurrentEditContext == null || EditingObject == null)
                    {
                        // Отображение пользователю надписи "Нет данных".
                        <p class="align-middle"><em>Нет данных</em></p>
                    }
                    else
                    {
                        <EditForm EditContext="@CurrentEditContext" OnValidSubmit="@HandleValidSubmitAsync" OnInvalidSubmit="@HandleInvalidSubmit">
                            <DataAnnotationsValidator/>

                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                </div>
                            </div>

                            <div class="row">
                                <label for="topic" class="col-form-label col-auto ps-0">Статус проекта: </label>
                                <div class="col-1">
                                </div>

                                @* Если список Тем получен с сервера, то *@
                                @if (Topics.Any())
                                {
                                    <InputSelect id="topic" class="form-control col" @bind-Value="EditingObject.TopicId">
                                        @foreach (TopicModel currentTopic in Topics)
                                        {
                                            <option value="@(currentTopic.Id.ToString())">@currentTopic.Name</option>
                                        }
                                    </InputSelect>
                                    <div class="col-form-label col-lg-auto mx-lg-2">
                                        <ValidationMessage For="@(() => EditingObject.TopicId)" />
                                    </div>
                                }
                            </div>

                            <div class="row">
                                <label for="name" class="col-form-label col-lg-2 ps-0">Question text: </label>
                                <InputText id="name" class="form-control col" @bind-Value="@EditingObject.QuestionText"></InputText>
                            </div>
                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                    <ValidationMessage For="@(() => EditingObject.QuestionText)" />
                                </div>
                            </div>

                            <div class="row">
                                <label for="shortname" class="col-form-label col-lg-2 ps-0">Option 1 text: </label>
                                <InputText id="shortname" class="form-control col" @bind-Value="@EditingObject.Option01"></InputText>
                            </div>
                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                    <ValidationMessage For="@(() => EditingObject.Option01)" />
                                </div>
                            </div>
                            
                            <div class="row">
                                <label for="shortname" class="col-form-label col-lg-2 ps-0">Option 2 text: </label>
                                <InputText id="shortname" class="form-control col" @bind-Value="@EditingObject.Option02"></InputText>
                            </div>
                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                    <ValidationMessage For="@(() => EditingObject.Option02)" />
                                </div>
                            </div>
                            
                            <div class="row">
                                <label for="shortname" class="col-form-label col-lg-2 ps-0">Option 3 text: </label>
                                <InputText id="shortname" class="form-control col" @bind-Value="@EditingObject.Option03"></InputText>
                            </div>
                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                    <ValidationMessage For="@(() => EditingObject.Option03)" />
                                </div>
                            </div>
                            
                            <div class="row">
                                <label for="shortname" class="col-form-label col-lg-2 ps-0">Option 4 text: </label>
                                <InputText id="shortname" class="form-control col" @bind-Value="@EditingObject.Option04"></InputText>
                            </div>
                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                    <ValidationMessage For="@(() => EditingObject.Option04)" />
                                </div>
                            </div>
                            
                            <div class="row">
                                <label for="name" class="col-form-label col-lg-2 ps-0">Correct answer text: </label>
                                <InputText id="name" class="form-control col" @bind-Value="@EditingObject.Answer"></InputText>
                            </div>
                            <div class="row">
                                <div class="col-lg offset-lg-3 mb-3">
                                    <ValidationMessage For="@(() => EditingObject.Answer)" />
                                </div>
                            </div>

                            @* Если зафиксированы ошибки, то *@
                            @if (HasErrors)
                            {
                                // Вывод текста сообщения об ошибке.
                                <div class="alert alert-danger mt-2">@ResultDescription</div>
                            }

                            @* Кнопки управления *@
                            <div class="row">
                                @* Рамка отступов вокруг кнопок управления *@
                                <div class="col d-flex align-content-stretch mx-1 mt-2">
                                    <DxButton SubmitFormOnClick="true" RenderStyle="ButtonRenderStyle.Primary" RenderStyleMode="ButtonRenderStyleMode.Outline" class="m-1 ms-auto" style="width: 210px" disabled="@(!HasChanges)" Context="stubContext">Сохранить</DxButton>
                                    <DxButton Click="NavigateToReturnUrl" RenderStyle="ButtonRenderStyle.Primary" RenderStyleMode="ButtonRenderStyleMode.Outline" class="m-1" style="width: 210px" Context="stubContext">Отмена</DxButton>
                                </div>
                            </div>
                        </EditForm>
                    }
                }
            </div>
        </div>
    </div>
</LayoutView>
